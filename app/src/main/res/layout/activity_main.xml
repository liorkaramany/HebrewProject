<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/b1"
    tools:context="com.example.user.hebrewproject.Main">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17.5dp"
        android:textColor="#000000"
        android:text="Albert is the best!" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:onClick="nouns"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:text="שם העצם"
                android:textSize="20dp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:onClick="verbs"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:text="הפועל"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:onClick="mixed"
                android:textSize="20dp"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:text="תרגילים מעורבבים" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:onClick="number"
                android:textSize="20dp"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:text="שם המספר ומילות יחס" />

        </TableRow>

    </TableLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:onClick="bagruts"
        android:textSize="20dp"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:text="תרגילים מבגרויות" />

</LinearLayout>
